public class number
{
    public static void main(String args[])
      {
       int number=3;
       if(number>0)
       {
         System.out.println(number +"number is positive");
       }
       elseif(number<0)
       {
          System.out.println(number +"number is negative");
       }
       else
       {
         System.out.println("number is zero");
       }
